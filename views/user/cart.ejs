                                        <th>Quantity</th>
                                        <th>Total</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% cartList.forEach((item)=>{%>

                                        <tr>
                                            <td class="product__cart__item">
                                                <div class="product__cart__item__pic">
                                                    <img src="<%= item.product.image_url[0].url %>"
                                                        style="max-width: 80px; height: 90px;" alt="">
                                                </div>
                                              
                                                <div class="product__cart__item__text">
                                                    <h6>
                                                        <%=item.product.productname%>
                                                    </h6>

                                                    <h5>$<%=item.product.price%>
                                                    </h5>


                                                </div>
                                            </td>


                                            <td >  
                                                <div class="d-flex justify-content-center align-items-center">
                                                    <button type="submit" onclick="decrementCount('<%= item.userId%>','<%= item.cartItems.productId%>','<%=item.product.price%>')" class="decrement-button btn d-flex justify-content-center align-items-center" data-product-id="<%= item.product._id %>" style="min-width: 30px;">
                                                      <i class="fa-solid fa-minus"></i>
                                                    </button>
                                                    <p id="Quantity<%= item.cartItems.productId%>" class="quantity-text d-flex justify-content-center align-items-center w-50"><%= item.cartItems.qty %></p>
                                                    <button class="increment-button btn d-flex justify-content-center align-items-center" onclick="incrementCount('<%= item.userId%>','<%= item.cartItems.productId%>',' <%=item.product.qty%>',)" data-product-id="<%= item.cartItems.productId %>" style="min-width: 30px;">
                                                      <i class="fa-solid fa-plus"></i> 
                                                    </button>
                                                  </div>
                                              
                                                <% var totalprice=item.cartItems.qty * item.product.price %>
                                              </td>
                                              
                                            <td class="cart__price"><span id="total-price" >$ <%= totalprice%></span>
                                            </td>
                                        
                                            <% totalAmount +=totalprice %>


                                            <td class="product_remove">
                                                <button onclick="deleteItem('<%= item.cartItems.productId %>',' <%= totalprice%>')">
                                                    <span> <i class="fa fa-trash-o"></i></span>
                                                </button>
                                              </td>




                                        </tr>

