}



.select-box {
  position: relative;
  display: inline-block;
  margin-bottom: 20px;
}

.select-box select {
  display: block;
  appearance: none;
  -webkit-appearance: none;
  -moz-appearance: none;
  width: 100%;
  height: 50px;
  padding: 10px 20px;
  border: 2px solid #ccc;
  background-color: #fff;
  font-size: 16px;
  font-weight: bold;
  color: #333;
  cursor: pointer;
}

.select-box select:focus {
  outline: none;
  border-color: #999;
}

.select-box:after {
  content: "\f0d7";
  font-family: "FontAwesome";
  position: absolute;
  top: 50%;
  right: 20px;
  transform: translateY(-50%);
  font-size: 16px;
  color: #333;
  pointer-events: none;
}

@media (max-width: 767px) {
  .select-box select {
    height: 40px;
    font-size: 14px;
  }
}

