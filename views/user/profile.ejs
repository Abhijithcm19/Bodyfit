  <div class="container">
    <div class="main-body">
      <div class="row gutters-sm mt-3">
        <div class="col-md-4 mb-3">
          <div class="card">
            <div class="card-body">
              <div class="d-flex flex-column align-items-center text-center">
                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle"
                  width="150" />
                <div class="mt-3">
                  <h4>
                    <%= userData.name %>
                  </h4>
                </div>
              </div>

            </div>
          </div>
        </div>
        <div class="col-md-8">
          <div class="card mb-3">
            <div class="card-body">
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Full Name</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= userData.name %>
                </div>
              </div>
              <hr>

              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Email</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= userData.email %>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Phone</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= userData.mobile %>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-12">
                  <a class="btn w-100 mt-2 btn-primary" href="/edit-profile?id=<%= userData._id%>">Edit</a>
                  <div class="text bg-center"></div>
                </div>
              </div>
            </div>
          </div>
          <div class="">
            <div class="m-1 row card justify-content-center">
              <div class="w-100  col-sm-10 col-lg-8 card o-hidden border-0  my-3">
                <div class="p-3">
                  <div class="col-sm-12">
                    <a class="btn w-10 mt-2 btn-primary" href="/profile-address">Show Address</a>
                    <div class="text bg-center"></div>
                  </div>
                  <div class="text-center">
                    <h1 class="h4 text-gray-900 my-3">Add New Address</h1>
                  </div>
                  <form action="/address" class="user" method="POST">
                    <div class="form-group row">
                      <div class="col-sm-6 input-control">
                        <label class="form-label">Full name*</label>
                        <input type="text" class="form-control form-control-user" id="username" name="name" required />
                        <p class="valid_error"></p>
                      </div>
                      <div class="col-sm-6 input-control">
                        <label class="form-label">Company/Shop</label>
                        <input type="text" class="form-control form-control-user" id="" name="company" />
                        <p class="valid_error"></p>
                      </div>
                    </div>
                    <div class="form-group row">
                      <div class="col-sm-6 input-control">
                        <label class="form-label">Email*</label>
                        <input type="email" class="form-control form-control-user" id="emailAddress" name="email"
                          required />
                        <p class="valid_error"></p>
                      </div>
                      <div class="col-sm-6 input-control">
                        <label class="form-label">Mobile*</label>
                        <input type="number" class="form-control form-control-user" id="" name="mobile"
                          pattern="[5-9]{1}[0-9]{9}" required />
                        <p class="valid_error"></p>
                      </div>
                    </div>
                    <div class="form-group row">
                      <div class="col-sm-6 input-control">
                        <label class="form-label">Country*</label>
                        <input type="text" class="form-control form-control-user" id="" name="country" required />
                        <p class="valid_error"></p>
                      </div>
                      <div class="col-sm-6 input-control">
                        <label class="form-label">State*</label>
                        <input type="text" class="form-control form-control-user" id="" name="state" required />
                        <p class="valid_error"></p>
                      </div>
                    </div>
                    <div class="form-group row">
                      <div class="col-sm-6 input-control">
                        <label class="form-label">City/Town*</label>
                        <input type="text" class="form-control form-control-user" id="" name="town" required />
                        <p class="valid_error"></p>
                      </div>
                      <div class="col-sm-6 input-control">
                        <label class="form-label">Postal Code/ZIP*</label>
                        <input type="tel" class="form-control form-control-user" id="" name="zip" pattern="[0-9]{4,7}"
                          required />
                        <p class="valid_error"></p>
                      </div>
                    </div>
                    <div class="form-group row">
                      <div class="col-sm-12 input-control">
                        <label class="form-label">Street Address*</label>
                        <textarea placeholder="Building No/Name, Locality, Street, Post Office" class="form-control"
                          rows="3" id="" name="address" required></textarea>
                      </div>
                    </div>
                    <div class="mt-2 mx-1 form-group row justify-content-center">
                      <button type="submit" class="btn btn-primary btn-user px-5">
                        Add Address
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-8 w-100">
            <div class="card mb-3">
              <form class="row g-3" action="/change-Password" method="post">
                <div class="card-body">
                  <div class="row mt-1">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Current password</h6>
                    </div>

                    <div class="col-sm-9 text-secondary">
                      <input type="password" name="current" class="form-control" id="inputNanme4" required value="">

                    </div>
                  </div>
                  <div class="row mt-1">
                    <div class="col-sm-3">
                      <h6 class="mb-0">
                        New password</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <input type="password" name="new" class="form-control" id="inputNanme4" required value="">
                    </div>
                  </div>
                  <div class="row mt-1">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Confirm password</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <input type="password" name="confirm" class="form-control" id="inputNanme4" required value="">

                    </div>
                  </div>
                  <div class="row">
                    <div class="col-sm-12 ">
                      <div class="text-center">
                        <button type="submit" class="w-100 mt-2 btn btn-primary">submit</button>
                      </div>
                    </div>
                  </div>
              </form>
            </div>
          </div>
        </div>
      </div>
