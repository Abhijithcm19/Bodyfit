         <form action="/update-address/<%= address._id %>" class="user" method="POST">
          <div class="form-group row">
            <div class="col-sm-6 input-control">
              <label class="form-label">Full name*</label>
              <input type="text" class="form-control form-control-user"
                id="username" name="name"  value="<%= address.Fullname %>" required />
              <p class="valid_error"></p>
            </div>
            <div class="col-sm-6 input-control">
              <label class="form-label">CompanyName/HouseName</label>
              <input type="text" class="form-control form-control-user"
                id="" name="company" value="<%=address.company %>" />
              <p class="valid_error"></p>
            </div>
          </div>
          
              <div class="form-group row">
                <div class="col-sm-6 input-control">
                  <label class="form-label">Email*</label>
                  <input type="email" class="form-control form-control-user"
                    id="emailAddress" name="email" value="<%= address.email%>" required />
                  <p class="valid_error"></p>
                </div>
                <div class="col-sm-6 input-control">
                  <label class="form-label">Mobile*</label>
                  <input type="number" class="form-control form-control-user"
                    id="" name="mobile" pattern="[5-9]{1}[0-9]{9}" value="<%= address.mobile %>"
                    required />
                  <p class="valid_error"></p>
                </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-6 input-control">
                  <label class="form-label">Country*</label>
                  <input type="text" class="form-control form-control-user"
                    id="" name="country" value="<%= address.countryname %>" required />
                  <p class="valid_error"></p>
                </div>
                <div class="col-sm-6 input-control">
                  <label class="form-label">State*</label>
                  <input type="text" class="form-control form-control-user"
                    id="" name="state" value="<%= address.state%>"  required />
                  <p class="valid_error"></p>
                </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-6 input-control">
                  <label class="form-label">City/Town*</label>
                  <input type="text" class="form-control form-control-user"
                    id="" name="town" value="<%= address.city%>"  required />
                  <p class="valid_error"></p>
                </div>
                <div class="col-sm-6 input-control">
                  <label class="form-label">Postal Code/ZIP*</label>
                  <input type="tel" class="form-control form-control-user"
                    id="" name="zip" pattern="[0-9]{4,7}" value="<%= address.postal_code%>" required />
                  <p class="valid_error"></p>
                </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-12 input-control">
                  <label class="form-label">Street Address*</label>
                  <textarea
                    placeholder="Building No/Name, Locality, Street, Post Office"
                    class="form-control" rows="3" id="" name="address"
                    required><%= address.houseaddress %></textarea>
                </div>


              </div>
              <div class="mt-2 mx-1 form-group row justify-content-center">
                <button type="submit" class="btn btn-primary btn-user px-5">
                  Edit Address
                </button>
              </div>
            </form>
