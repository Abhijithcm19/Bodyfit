<script>function removeFromWishlist(wishlistItemId) {
    fetch('/removeWishlist/' + wishlistItemId, {
      method: 'put'
    })
    .then(response => {
      if (response.ok) {
        location.reload();
      } else {
        console.error('Failed to remove item from wishlist');
      }
    })
    .catch(error => console.error(error));
  }
  </script>
        
