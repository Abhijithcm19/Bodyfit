<%- include('../admin/layouts/admin-header.ejs') %>

  <div class="container-fluid py-4">
    <div class="row">
      <div class="col-12">
        <div class="card mb-4">
          <div class="card-header pb-0">
            <h6>Order table</h6>
          </div>
          <div class="card-body px-0 pt-0 pb-2">
            <div class="table-responsive p-0">
              <div class="container-fluid mb-3">
                <a href="/exportorder"><button type="button" class="btn btn-dark mb-2" data-bs-toggle="modal"
                    data-bs-target="#staticBackdrop">
                    Downlod Oder Data
                  </button></a>
              </div>

              <table id="example" class="table table-striped   table-bordered text-center table-hove"
                style="width:100%">
                <thead class="table-dark">
                  <tr>
                    <th>No.</th>
                    <th>Date</th>
                    <th>User Name</th>
                    <th>Order Items <i class="fa-solid fa-pickaxe"></i></th>

                    <th>Quantity</th>
                    <th>Payment Methode</th>
                    <th>Total Price</th>
                    <th>Address</th>
                    <th>Full Details</th>
                    <th>Status</th>
                    <th>Update Status</th>
                  </tr>
                </thead>
                <tbody class="text-center align-items-center">
                  <% orderList.forEach((item,index)=>{%>
                    <tr>
                      <td>
                        <%= index + 1%>
                      </td>
                      <td>
                        <%= item.createdAt.toLocaleDateString() %>
                      </td>
                      <td>
                        <%=item.name%>
                      </td>

                      <td>
                        <% item.product.forEach((pItem)=> { %><p>
                            <%= pItem.productname %>
                          </p>
                          <% }) %>
                      </td>


                      <td>
                        <% item.orderItems.forEach((orderItem)=> { %>
                          <p>
                            <%= orderItem.quantity %>
                          </p>



                          <% }) %>
                      </td>

                      <td>
                        <div class="mb-3 ">
                          <p>
                            <%=item.paymentMethod%> : <% if (item.paymentStatus==='paid' ) { %>
                                <p style="color:green;">
                                  <%= item.paymentStatus %>
                                </p>
                                <% } else { %>
                                  <p style="color: rgb(221, 15, 15);">
                                    <%= item.paymentStatus %>
                                  </p>
                                  <% } %>
                          </p>

                        </div>
                      </td>
                      <td class="align-items-center">
                        <p>&#8377; <%=item.totalPrice%>
                        </p>
                      </td>
                      <td class="align-items-center text-center">
                        <%=item.street%>
                          <%=item.city%>
                            <%=item.state%>
                              <%=item.code%>
                      </td>
                      <td>
                        <button type="button" class="btn btn-success" data-bs-toggle="modal"
                          data-bs-target="#exampleModl-<%= item._id %>">
                          <i class="fas fa-eye"></i>
                        </button>
                      </td>
                      <td>
                        <p>
                          <%= item.orderStatus %>
                        </p>
                      </td>
                      <div class="modal fade" id="exampleModl-<%= item._id %>" tabindex="-1"
                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h1 class="modal-title fs-5" id="exampleModalLabel"> Orders</h1>
                              <button type="button" class="btn-close" data-bs-dismiss="modal"
                                aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                              <form>
                                <div class="mb-3">
                                  <label for="recipient-name" name="orderStatus" class="col-form-label"
                                    style="font-size: 18px; font-weight: bold; text-decoration: underline;">ORDER
                                    DETAILS</label>
                                </div>
                                <div class="mb-3" class="d-flex justify-content-center">
                                  <label for="message-text" name="orderStatus " class="col-form-label"><b>User
                                      Name:</b></label>
                                  <p>
                                    <%= item.name %>
                                  </p>
                                </div>
                                <div class="mb-3" class="d-flex justify-content-center">
                                  <label for="message-text" name="orderStatus " class="col-form-label"><b>Product Name &
                                      Quantity</b></label>
                                  <% item.product.forEach((pItem)=> { %>
                                    <% const orderItem=item.orderItems.find(item=> item.productId.toString() ===
                                      pItem._id.toString()); %>
                                      <div style="display: flex; ">
                                        <p style="color: rgb(4, 130, 8);">
                                          <%= pItem.name %>
                                        </p>
                                        <p style="color: rgb(26, 27, 27);">: x <%= orderItem ? orderItem.quantity : 0 %>
                                        </p>
                                      </div>
                                      <% }) %>
                                </div>
                                <div class="mb-3">
                                  <label for="message-text" name="orderStatus " class="col-form-label"><b>Total
                                      Price</b></label>
                                  <p style="color: rgb(221, 15, 15);">&#8377; <%=item.totalPrice%>
                                  </p>
                                </div>
                                <label for="message-text" name="orderStatus " class="col-form-label"><b>Payment
                                    Details:</b></label>
                                <div class="mb-3 d-flex">
                                  <p>
                                    <%=item.paymentMethod%> : <% if (item.paymentStatus==='paid' ) { %>
                                        <p style="color:green;">
                                          <%= item.paymentStatus %>
                                        </p>
                                        <% } else { %>
                                          <p style="color: rgb(221, 15, 15);">
                                            <%= item.paymentStatus %>
                                          </p>
                                          <% } %>
                                  </p>
                                </div>
                                <div class="mb-3">
                                  <label for="message-text" name="orderStatus " class="col-form-label"> <b>Order
                                      Status:</b></label>
                                  <p>
                                    <%=item.orderStatus%>
                                  </p>
                                </div>
                                <div class="mb-3">
                                  <label for="message-text" name="orderStatus " class="col-form-label"> <b>Address:</b>
                                  </label>
                                  <p>
                                    <%=item.name%>
                                      <%=item.street%>
                                        <%=item.city%>
                                          <%=item.state%>
                                            <%=item.code%>
                                  </p>
                                </div>
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                </div>
                              </form>
                            </div>
                          </div>
                        </div>
                      </div>
                      <td>
                        <button type="button" class="btn btn-success" data-bs-toggle="modal"
                          data-bs-target="#exampleModal-<%= item._id %>">
                          <i class="fas fa-pencil-alt" style="color: black;"></i>
                        </button>
                        <style>
                          .btn-success i:hover {
                            color: yellow;
                          }
                        </style>
                      </td>
                      <!-- Modal -->
                      <div class="modal fade" id="exampleModal-<%= item._id %>" tabindex="-1"
                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h1 class="modal-title fs-5" id="exampleModalLabel">Edit orders</h1>
                              <button type="button" class="btn-close" data-bs-dismiss="modal"
                                aria-label="Close"></button>
                            </div>
                            <div class="modal-body">

                              <form action="/admin/order-statuschange/<%= item._id %>" method="post">

                                <div class="mb-3">
                                  <label for="recipient-name" name="orderStatus" class="col-form-label"> Order
                                    Status</label>
                                  <select class="form-select" name="orderStatus" aria-label="Default select example"
                                    id="">
                                    <div class="modal-body">

                                      <option selected>
                                        <%= item.orderStatus %>
                                      </option>


                                      <option value="pending" name="orderStatus">Pending</option>
                                      <option value="shipped" name="orderStatus">Shipped</option>
                                      <option value="out for Delivery" name="outForDelivery">Out For Delivery</option>
                                      <option value="delivered" name="orderStatus">Delivered</option>
                                      <option value="cancelled" name="orderStatus">Cancel</option>
                                  </select>
                                </div>
                                <div class="mb-3">
                                  <label for="message-text" name="orderStatus " class="col-form-label">Payment
                                    status</label>
                                  <select name="paymentStatus" class="form-select" id="">

                                    <option selected>
                                      <%= item.paymentMethod %>
                                    </option>
                                    <option value="not paid" style="color:red;">Not Paid</option>
                                    <option value="paid" style="color:green;">Paid</option>
                                  </select>
                                </div>
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                  <button type="submit" class="btn btn-success">Save changes</button>
                                </div>
                              </form>
                            </div>
                          </div>
                        </div>
                      </div>
                      </td>
                    </tr>
                    <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
  <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    $(document).ready(function () {
      var table = $('#example').DataTable({
        rowReorder: {
          selector: 'td:nth-child(2)'
        },
        responsive: true
      });
    });
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>