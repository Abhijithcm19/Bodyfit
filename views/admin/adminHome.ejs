  <div class="row mt-4">
    <div class="col-lg-7 mb-lg-0 mb-4">
      <div class="card z-index-2 h-100">
        <div class="card-header pb-0 pt-3 bg-transparent">
          <h6 class="text-capitalize">Sales overview</h6>
          <p class="text-sm mb-0">
            <i class="fa fa-arrow-up text-success"></i>
            <span class="font-weight-bold"></span>
          </p>
        </div>
        <div class="card-body p-3">
          <div class="chart">
            <canvas id="barChart" class="chart-canvas" height="170"></canvas>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/4.2.1/chart.min.js" integrity="sha512-v3ygConQmvH0QehvQa6gSvTE2VdBZ6wkLOlmK7Mcy2mZ0ZF9saNbbk19QeaoTHdWIEiTlWmrwAL4hS8ElnGFbA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
            <script>
              document.addEventListener("DOMContentLoaded", () => {
                fetch('/admin/get-month-wise-data').then((res) => res.json()).then((chartData) => {
                  console.log(chartData);2
                  const ordersKeys = Object.keys(chartData.orderChart[0].data)
                  const ordersData = ordersKeys.map((key, index) => chartData.orderChart[0].data[key])
                  const usersKeys = Object.keys(chartData.userChart[0].data)
                  const usersData = usersKeys.map((key, index) => chartData.userChart[0].data[key])
               
                  const productKeys = Object.keys(chartData.product[0].data)
                  const productData = productKeys.map((key, index) => chartData.product[0].data[key])
                  new Chart(document.querySelector('#barChart'), {
                    type: 'bar',
                      data: {
                        labels: ordersKeys,
                        datasets: [{
                          label: 'Orders',
                          data: ordersData,
                          borderWidth: 2
                        }, {
                          label: 'Users',
                          data: usersData,
                          borderWidth: 2
                        }, {
                          label: 'Total Product',
                          data: productData,       
                          borderWidth: 2
                        }]
                      },
                    options: {
                      scales: {
                        y: {
                          beginAtZero: true
                        }
                      }
                    }
                  })
                })
              });
            </script>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-lg-5">
      <div class="card card-carousel overflow-hidden h-100 p-0">
        <div id="carouselExampleCaptions" class="carousel slide h-100" data-bs-ride="carousel">
          <div class="carousel-inner border-radius-lg h-100">
            <canvas id="myChartdon"></canvas>
            <script>
              document.addEventListener("DOMContentLoaded", () => {
                fetch('/admin/get-order-status').then((res) => res.json()).then((orderData) => {
                  console.log(orderData);
                echarts.init(document.querySelector("#trafficChart")).setOption({
                  tooltip: {
                    trigger: 'item'
                  },
                  legend: {
                    top: '5%',
                    left: 'center'
                  },
                  series: [{
                    name: 'Orders',
                    type: 'pie',
                    radius: ['40%', '70%'],
                    avoidLabelOverlap: false,
                    label: {
                      show: false,
                      position: 'center'
                    },
                    emphasis: {
                      label: {
                        show: true,
                        fontSize: '18',
                        fontWeight: 'bold'
                      }
                    },
                    labelLine: {
                      show: false
                    },
                    data: [{
                      value: orderData?.ship, 
                      name: 'Shipped Items'
                    },
                    {
                      value:orderData?.delivered,
                      name: 'Delivered Items'
                    },
                    {
                    
                      value: orderData?.pending,
                      name: 'Pending Items'
                    },
                    {
                      value: orderData?.outdelivery,
                      name: 'Out of Delivery'
                    }
                    ]
                  }]
                });})
              });
            </script>
              <div class="carousel-caption d-none d-md-block bottom-0 text-start start-0 ms-5">
           
                  <!-- <i class="ni ni-camera-compact text-dark opacity-10"></i> -->
                </div>
                
              </div>
            </div>
            
  
              <div class="carousel-caption d-none d-md-block bottom-0 text-start start-0 ms-5">
                <div class="icon icon-shape icon-sm bg-white text-center border-radius-md mb-3">
              
                </div>
            
              </div>
            </div>
            <div class="carousel-item h-100" style="background-image: url('/public/projectAdmin/bodyfit.jpg');
                   background-size: cover;">
              <div class="carousel-caption d-none d-md-block bottom-0 text-start start-0 ms-5">
             
               
                </div>
            
              </div>
            </div>
          </div>
          <button class="carousel-control-prev w-5 me-3" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next w-5 me-3" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
    </div>
  </div>
 

